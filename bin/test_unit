#!/usr/bin/env node
var chokidar = require('chokidar');
var exec = require('child_process').exec;

var watcher = chokidar.watch(['routes/', 'test/'], {ignored: /[\/\\]\./, persistent: true, ignoreInitial: true});

watcher.on('all', function(event, path) {
  console.log(path, 'changed');
  exec('npm run test_unit', function (error, stdout, stderr) {
    console.log(stdout);
  });
});



